<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="buttonHandler"
    tools:context=".HomeActivity"
    android:configChanges="uiMode">

    <Button
        android:id="@+id/myRecipes"
        android:layout_width="250dp"
        android:layout_height="88dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/rounded_text"
        android:fontFamily="@font/trocchi"
        android:onClick="buttonHandler"
        android:text="My Recipes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/trocchi"
        android:onClick="buttonHandler"
        android:text="My profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImage" />

    <Button
        android:id="@+id/addRecipe"
        android:layout_width="250dp"
        android:layout_height="88dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_text"
        android:fontFamily="@font/trocchi"
        android:onClick="buttonHandler"
        android:text="Add Your Recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRecipes" />

    <Button
        android:id="@+id/browseRecipes"
        android:layout_width="250dp"
        android:layout_height="88dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_text"
        android:fontFamily="@font/trocchi"
        android:onClick="buttonHandler"
        android:text="Browse Recipes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipe" />

    <Button
        android:id="@+id/newsButton"
        android:layout_width="250dp"
        android:layout_height="88dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_text"
        android:fontFamily="@font/trocchi"
        android:onClick="buttonHandler"
        android:text="News"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browseRecipes" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="85dp"
        android:layout_height="72dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:onClick="buttonHandler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_profile_white" />

    <ImageView
        android:id="@+id/logoHome"
        android:layout_width="261dp"
        android:layout_height="229dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>