<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userSignUpBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationUsername"
    android:configChanges="uiMode">

    <ImageView
        android:id="@+id/userSignUpLogo"
        android:layout_width="341dp"
        android:layout_height="331dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_logo_main"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/usernameBackArrow"
        android:layout_width="36dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_black" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/usernameInputBox"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:autofillHints="username"
        android:background="@drawable/rounded_text"
        android:gravity="center"
        android:hint="@string/usernameText"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/usernameSignUpProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ProgressBar
        android:id="@+id/usernameSignUpProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:indeterminateTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/usernameSignUpBttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/usernameSignUpBttn"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/trocchi"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/emailSignUpTxt"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userSignUpLogo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Please provide username how users will see you!"
        app:layout_constraintBottom_toTopOf="@+id/usernameInputBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>